<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Chatter.AccountPage"
             Title="">
    <Grid RowDefinitions="*, 48" Padding="16">
        <VerticalStackLayout Grid.Row="0">
            <Grid ColumnDefinitions="Auto,*" ColumnSpacing="12">
                <Label Grid.Column="0" Text="Name" VerticalOptions="Center"></Label>
                <Entry Grid.Column="1" TextChanged="Entry_TextChanged"></Entry>
            </Grid>

        </VerticalStackLayout>
        <Button Grid.Row="1" Text="Apply" IsEnabled="{Binding ApplyButtonAllowed}" x:Name="ApplyButton"></Button>
    </Grid>
</ContentPage>